# Application Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=password
DB_DATABASE=data_cleaning_service
DB_SYNCHRONIZE=true
DB_LOGGING=true

# File Upload Configuration (500MB)
MAX_FILE_SIZE=524288000
UPLOAD_DIR=./uploads
TEMP_DIR=./temp

# File Retention (days)
FILE_RETENTION_DAYS=30
# Worker Threads 并行处理配置
# 是否启用并行处理（true/false）
ENABLE_PARALLEL_PROCESSING=true

# 工作线程数量（建议 2-8，默认 4）
WORKER_COUNT=4

# 并行批处理大小（默认 10000）
PARALLEL_BATCH_SIZE=10000

# 最大内存限制（MB，默认 1800）
MAX_MEMORY_MB=1800

# 工作线程超时时间（毫秒，默认 300000 = 5分钟）
WORKER_TIMEOUT_MS=300000

# 最小并行处理记录数（小于此值使用顺序处理，默认 1000）
MIN_RECORDS_FOR_PARALLEL=1000

# 数据块重叠行数（默认 0）
CHUNK_OVERLAP_ROWS=0

# 是否启用进度跟踪（true/false，默认 true）
ENABLE_PROGRESS_TRACKING=true

# 进度更新间隔（毫秒，默认 1000）
PROGRESS_UPDATE_INTERVAL_MS=1000

# 是否启用性能监控（true/false，默认 true）
ENABLE_PERFORMANCE_MONITORING=true

# 性能采样间隔（毫秒，默认 1000）
PERFORMANCE_SAMPLE_INTERVAL_MS=1000
